<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field m-2">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: "col-6 border border-1 border-grey p-2 rounded-1" %>
  </div>

  <div class="field m-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6 border border-1 border-grey p-2 rounded-1" %>
  </div>

  <div class="field m-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "col-6 border border-1 border-grey p-2 rounded-1" %>
  </div>

  <div class="field m-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-6 border border-1 border-grey p-2 rounded-1" %>
  </div>

  <div class="actions m-2">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>