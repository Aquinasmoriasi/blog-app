<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6 border border-1 border-grey p-2 rounded-1" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "col-6 border border-1 border-grey p-2 rounded-1" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mt-3 mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-success mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
